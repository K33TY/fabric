<!--
  This is the Apache Ant build file for the Fabric classloader tools.
-->

<project name="classloader" default="build-all" basedir=".">
  <description>
    Fabric classloader tools build file
  </description>

  <!--
  ****************************************************************************
    Global properties for this build.
  ****************************************************************************
  -->

  <import file="../../common.xml" />

  <dirname property="classloader.home" file="${ant.file.classloader}" />

  <!--
  ****************************************************************************
    Targets for cleaning up the directory tree.
  ****************************************************************************
  -->

  <target name="clean" description="Removes generated files">
    <delete dir="${classloader.home}/classes"/>
  </target>

  <target name="clobber" depends="clean" />

  <!--
  ****************************************************************************
    Compilation targets.
  ****************************************************************************
  -->

  <target name="build"
      description="Builds the Fabric classloader tools">
    <mkdir dir="${classloader.home}/classes" />
    <javac target="1.6" srcdir="${classloader.home}/src"
	destdir="${classloader.home}/classes" includeAntRuntime="false"
	debug="on">
      <classpath>
	<path refid="fabric.classpath" />
      </classpath>
    </javac>
  </target>

  <target name="build-all" depends="build" />
  <target name="all" depends="build-all" />

</project>
