    // Search Operations
    public boolean{S;C;*lbl;lbl;elem} contains(label lbl, jif.lang.JifObject[lbl] elem) {
        return indexOf(lbl,elem) >= 0;
    }


    public int{S;C;o} indexOf(jif.lang.JifObject[C] o) {
        return indexOf(C, o);
    }
    public int{S;C;*lbl;lbl;o} indexOf(label lbl, jif.lang.JifObject[lbl] o) {
        int i = 0;
        int sz = size();
        try {
            while (i < sz) {
                jif.lang.JifObject[C] e = get(i);
                if (o == e || (o != null && o.equals(C, e))) {
                    return i;
                }
                i++;
            }
        }
        catch (IndexOutOfBoundsException e) { /* cant happen */ }
        return -1;
    }

    public int{S;C;o} lastIndexOf(jif.lang.JifObject[C] o) {
        return lastIndexOf(C, o);
    }
    public int{S;C;*lbl;lbl;o} lastIndexOf(label lbl, jif.lang.JifObject[lbl] o) {
        int i = size() - 1;
        try {
            while (i >= 0) {
                jif.lang.JifObject[C] e = get(i);
                if (o == e || (o != null && o.equals(C, e))) {
                    return i;
                }
