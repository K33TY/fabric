#!/bin/bash

# Wrapper script for fabric.worker.Worker, the Fabric worker.

source "$(dirname $0)/defs"

while true; do
  case "$1" in
    "") break;;
    -local-code-only) localcode="1"; shift;;
    -v) verbose="1"; shift;;
    -cp) EXTRACP=$2; shift; shift;;
    -classpath) EXTRACP=$2; shift; shift;;    
    -j)
            shift
            vmargs="${vmargs} '$1'"
            shift
            ;;
    --debug)
            shift
            vmargs="${vmargs} -Xdebug -Xrunjdwp:transport=dt_socket,server=y,suspend=n,address=3371"
            ;;
    *) args="${args} '$1'"; shift;;
  esac
done

classpath="${FABRIC_WORKER_CP}:${EXTRACP}:${classpath}"

commandlocal="\"${JAVA}\" ${vmargs} -classpath \"$(fixpath ${classpath})\" fabric.worker.Worker ${args}"

command="\"${JAVA}\" ${vmargs} -classpath \"$(fixpath ${classpath})\" fabric.worker.MobileWorker ${args}"

if [ -n "${localcode}" ]
then
  command="${commandlocal}"
fi

if [ -n "${verbose}" ]
then
  echo "${command}"
fi

eval "${command}"
