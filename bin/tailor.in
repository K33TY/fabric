while true; do
  case "$1" in
    "") break;;
    -v) verbose="1"; shift;;
    *) args="$args '$1'"; shift;;
  esac
done

classpath="${TOP}${FILE_SEP}classes${PATH_SEP}"
classpath="${TOP}${FILE_SEP}lib${PATH_SEP}${classpath}${PATH_SEP}"
command="\"$JAVA\" $vmargs -classpath \"$classpath\" fabric.client.Client $args"

if [ -n "$verbose" ]
then
  echo "$command"
fi

eval "$command"
