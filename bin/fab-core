#!/bin/bash

source "$(dirname $0)/defs"

while true; do
  case "$1" in
    "") break;;
    -v) verbose="1"; shift;;
    -j)
            shift
            vmargs="$vmargs '$1'"
            shift
            ;;
    *) args="$args '$1'"; shift;;
  esac
done

classpath="$JIF/rt-classes:$classpath"
classpath="$TOP/classes:$TOP/rt-classes:$classpath"
classpath="$TOP/lib/fabric.jar:$classpath"
classpath="$TOP/lib/je-3.2.68.jar:$classpath"

command="\"$JAVA\" $vmargs -classpath \"$(fixpath $classpath)\" fabric.core.Main $args"

if [ -n "$verbose" ]
then
  echo "$command"
fi

eval "$command"
