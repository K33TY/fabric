if [[ $# != 1 ]] ; then
  echo "Generates SSL keys and certificates for a core or client"
  echo "and adds them to the common trust store."
  echo 
  echo "Usage: $(basename $0) <core hostname | client name>"
  exit 1
fi

DIR="${TOP}/etc/keys"

keytool -genkey -alias $1 -keyalg rsa -keysize 2048 -dname "CN=$1, OU=Fabric, O=Cornell University, L=Ithaca, ST=NY, C=US" -keypass 'password' -keystore "${DIR}/$1".keystore -storepass 'password'
keytool -export -alias $1 -keystore "${DIR}/$1".keystore -keypass 'password' -file "${DIR}/$1".cert -storepass 'password'

keytool -import -alias $1 -keystore "${DIR}"/trust.keystore -file "${DIR}/$1".cert -storepass 'password'
rm "${DIR}/$1".cert

