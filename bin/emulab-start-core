#!/bin/bash

# This is called by Emulab's experiment start-up scripts.
# Automatically starts a core running when the experiment starts.

source "$(dirname $0)/defs"

cd "${TOP}"

java -Xmx512M -classpath "${TOP}/classes:${TOP}/rt-classes:${TOP}/lib/je-3.2.68.jar:${TOP}/lib/FreePastry-2.1.jar" fabric.core.Main \
  --core ${HOSTNAME} \
      "${TOP}/etc/keys/${HOSTNAME}.keystore" \
      "${TOP}/etc/keys/trust.keystore" password \
  >& /tmp/fabric-core.log

