#!/bin/bash

for i in core0 core1 client0 client1 ; do
  keytool -genkey -alias $i -keyalg rsa -keysize 2048 -dname "CN=$i, OU=Fabric, O=Cornell University, L=Ithaca, ST=NY, C=US" -keypass 'password' -keystore $i.keystore -storepass 'password'
  keytool -export -alias $i -keystore $i.keystore -keypass 'password' -file $i.cert -storepass 'password'
done

for i in core0 core1 client0 client1 ; do
  keytool -import -alias $i -keystore trust.keystore -file $i.cert -storepass 'password'
  rm $i.cert
done

