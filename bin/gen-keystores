#!/bin/bash

for i in core0 client0 client1 ; do
  keytool -genkey -alias $i -keyalg rsa -keysize 2048 -dname "CN=$i, OU=Diaspora, O=Cornell University, L=Ithaca, ST=NY, C=US" -keypass '      ' -keystore $i.keystore -storepass '      '
  keytool -export -alias $i -keystore $i.keystore -keypass '      ' -file $i.cert -storepass '      '
done

for i in core0 client0 client1 ; do
  keytool -import -alias $i -keystore trust.keystore -file $i.cert -storepass '      '
  rm $i.cert
done

