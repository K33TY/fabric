package bank;

import java.util.List;
import java.util.LinkedList;

/**
 * A Bank holds a collection of accounts, and has methods for accessing those accounts.
 */
public class Bank {
	private final List accounts;
	private final Core location;

	/**
	 * create a new bank at the given location
	 */
	public Bank(Core location) {
		this.location = location;
		this.accounts = new LinkedList@location();
	}

	/**
	 * create and return a new Account, owned by user
	 */
	public Account createAccount (String name) {
		if (getAccount(name) != null)
			return null;
		Account result = new Account(name);
		accounts.add(result);
		return result;
	}

	public boolean transferFunds(Account tfer, Account tfee, int amt) {
		if (tfer.debit(amt)) {
			tfee.credit(amt);
			return true;
		} else
		return false;
	}

	public Account getAccount (String name) {
		for(int i = 0;i < accounts.size(); i++) {
			if (((Account) accounts.get(i)).name == name)
				return (Account) accounts.get(i);
		}
		return null;
	}
}
