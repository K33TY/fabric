package merchant;

import bank.*;
import carrier.*;

public class Merchant {
//	private Core{L} dataLocation;
//    private CarrierClient[L]{L} carr;
//    private BankClient[L]{L} bank;
	private Bank bank;
	private Carrier carr;

	public Merchant (Bank b, Carrier c) {
		this.bank = b;
		this.carr = c;
	}

	public boolean confirmTransaction () {
		atomic {
			int cp = carr.getTicketPrice();
		    boolean bb = bank.transferFunds(bank.getAccount("user0"), bank.getAccount(carr.getAccountName()), cp);
		    return bb;
		}
	}
}
