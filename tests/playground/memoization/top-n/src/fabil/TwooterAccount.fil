  public void addRandomFollower(Random rand) {
    atomic {
      while (true) {
        TwooterAccount candidate = getRandomTwooterAccount(rand);
        if (candidate == this) continue;
        if (!followers.contains(candidate)) {
          followers.add(candidate);
          return;
        }
      }
