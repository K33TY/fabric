<!--
  This is the Apache Ant build file for the Fabric readwritemix implementation.
-->

<project name="top-n" default="build-all" basedir=".">
  <description>
    Fabric top-n build file
  </description>

  <!--
  ****************************************************************************
    Global properties for this build.
  ****************************************************************************
  -->
  <import file="../../../../common.xml" />

  <dirname property="top-n.home" file="${ant.file.top-n}" />

  <!--
  ****************************************************************************
    Targets for cleaning up the directory tree.
  ****************************************************************************
  -->

  <target name="clean" description="Removes generated files">
    <delete dir="${top-n.home}/classes"/>
  </target>

  <target name="clobber" depends="clean"
          description="Removes generated files and state of stores">
    <delete dir="${top-n.home}/var"/>
  </target>

  <!--
  ****************************************************************************
    Compilation targets.
  ****************************************************************************
  -->

  <target name="build"
      description="Builds the Fabric top-n implementation">
    <mkdir dir="${top-n.home}/classes" />
    <javac source="1.6" target="1.6" srcdir="${top-n.home}/src/fabil" destdir="${top-n.home}/classes" includes="**/*.java" debug="on">
    </javac>
    <apply executable="bash"
        parallel="true"
        failonerror="true"
        dir="${top-n.home}"
        dest="${top-n.home}/classes"
        relative="false"
        skipemptyfilesets="true"
        vmlauncher="false">
      <arg value="${filc}" />
      <arg line="${debug.flag}" />
      <arg value="-d" />
      <arg value="classes" />
      <arg value="-sourcepath" />
      <arg value="src/fabil" />
      <arg value="-cp" />
      <arg value="classes" />
      <srcfile />
      <fileset dir="src/fabil">
        <include name="**/*.fil" />
      </fileset>
      <globmapper from="*.fil" to="*.class" />
    </apply>
  </target>

  <target name="build-all" depends="build" />
  <target name="all" depends="build-all" />

</project>

