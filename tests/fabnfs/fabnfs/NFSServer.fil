package fabnfs;

import fabric.worker.Core;
import fabric.worker.Worker;
import fabnfs.util.FileSystemFactory;
import fabnfs.util.FileSystemFactoryImpl;

public class NFSServer {
    public static void main(String[] args) {
        if (args.length != 1) {
            System.out.println("Usage: fab fabnfs.NFSServer <corename>");
            return;
        }
        Core localCore = Worker.getWorker().getLocalCore();
        Core remoteCore = Worker.getWorker().getCore(args[0]);
        FileSystemFactory factory = null;
	atomic {
	  factory = new FileSystemFactoryImpl@localCore();
	}
        unixnfs.startServer(localCore, remoteCore, factory, null);
    }
}
