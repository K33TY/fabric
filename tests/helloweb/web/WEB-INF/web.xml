<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app 
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" 
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	<display-name>Hello, Web!</display-name>
	<description>Test connecting fabric and tomcat</description>

	<welcome-file-list>
		<welcome-file>test.html</welcome-file> </welcome-file-list>
		
	<servlet>
		<servlet-name>xml</servlet-name>
		<servlet-class>XMLServlet</servlet-class>
		<init-param>
		  <param-name>uri</param-name>
		  <param-value>fab://core0/OO7</param-value> </init-param>
		<init-param>
		  <param-name>fabric-prefix</param-name>
		  <param-value>/home/mdgeorge/src/fabric/</param-value> </init-param> </servlet>
		
	<servlet-mapping>
		<servlet-name>xml</servlet-name>
		<url-pattern>/xml/*</url-pattern> </servlet-mapping> </web-app>

