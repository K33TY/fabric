package sif.servlet;
import jif.lang.Principal;

/**
 * Global state for a single session.
 */

public class SessionState {

    protected SessionState(String{this} sessionId) {
        this.sessionPrincipal = new SessionPrincipal(this);
        this.sessionId        = sessionId;
    }

    private final Principal{this} sessionPrincipal;
    private final String{this}    sessionId;

    public final String{this} getSessionId() {
        return this.sessionId;
    }

    public final Principal{this} sessionPrincipal() {
        return this.sessionPrincipal;
    }
    
    /** convenience method for non-fabric code */
    public static SessionState createSessionState(String id) {
      return new SessionState(id);
    }
}

