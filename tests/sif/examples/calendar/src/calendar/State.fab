class State {
    State(User[CalServEP]{this} currentUser, 
          Date[{currentUser!:}]{this} displayDate, 
          int{this} displayKind, 
          User[CalServEP]{this} displayUser) {
        this.currentUser = currentUser;
        this.displayDate = displayDate;
        this.displayKind = displayKind;
        this.displayUser = displayUser;
    }
    final User[CalServEP]{this} currentUser;
    final jif.util.Date[{currentUser!:}]{this} displayDate;
    final int{this} displayKind;
    final User[CalServEP]{this} displayUser;
    
