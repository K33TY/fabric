        return new State(this.currentUser, this.displayDate, this.displayKind, displayUser);
    }
    
    State changeDisplayDate(Date[{currentUser!:}] displayDate, int displayKind) {
        return new State(this.currentUser, displayDate, displayKind, this.displayUser);
    }
    State changeDisplayDate(Date[{currentUser!:}] displayDate) {
        return new State(this.currentUser, displayDate, this.displayKind, this.displayUser);
    }
}

