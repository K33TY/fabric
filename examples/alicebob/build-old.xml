<!--
  This is the Apache Ant build file for the Fabric "Alice Bob" example
-->

<project name="alicebob" default="build-all" basedir=".">
  <description>
    Build Alice Bob example
  </description>

  <!--
  ****************************************************************************
    Global properties for this build.
  ****************************************************************************
  -->

  <import file="../../common.xml" />

  <dirname property="alicebob.home" file="${ant.file.alicebob}" />

  <!--
  ****************************************************************************
    Targets for cleaning up the directory tree.
  ****************************************************************************
  -->

  <target name="clean" description="Removes generated files">
    <delete dir="${alicebob.home}/classes"/>
  </target>

  <target name="clobber" depends="clean"
          description="Removes generated files and state of stores">
    <delete dir="${alicebob.home}/var"/>
  </target>

  <!--
  ****************************************************************************
    Compilation targets.
  ****************************************************************************
  -->

  <target name="build"
          description="Builds the Alice Bob example">
    <fabc dest="${alicebob.home}/classes">
      <arg value="-sourcepath" /> <arg value="${alicebob.home}/src" />
      <arg value="-cp"         /> <arg value="${alicebob.home}/classes" />
      <arg value="-trusted-providers" />

      <fileset dir="${alicebob.home}/src" includes="**/*.fab" />
    </fabc>
  </target>

  <target name="build-all" depends="build" />
  <target name="all" depends="build-all" />

</project>

