<project name="mapapp" default="build-all" basedir=".">
  <description>
    mapapp build file
  </description>

  <!--
  ****************************************************************************
    Global properties for this build.
  ****************************************************************************
  -->

  <import file="../../common.xml" />

  <dirname property="home" file="${ant.file.mapapp}" />

  <!--
  ****************************************************************************
    Targets for cleaning up the directory tree.
  ****************************************************************************
  -->

  <target name="clean" description="Removes generated files">
    <delete dir="${home}/classes"/>
  </target>

  <target name="clobber" depends="clean"
          description="Removes generated files and state of stores">
    <delete dir="${home}/var"/>
  </target>

  <!--
  ****************************************************************************
    Compilation targets.
  ****************************************************************************
  -->

  <!-- TODO -->
  <target name="build-jif" description="Builds the Jif version of mapapp">
    <mkdir dir="${home}/classes" />
    <apply executable="bash"
           dir="${home}">
      <arg value="${jifc}"/>
      <arg value="-d"          /> <arg value="${home}/classes"/>
      <arg value="-sourcepath" /> <arg value="${home}/src/jif"/>
      <srcfile />

      <fileset dir="${home}/src/jif" includes="**/*.jif" />
      <globmapper from="*.jif" to="*.class" />

    </apply>
  </target>


  <target name="build-fabric" description="Builds the fabric version of mapapp">
    <mkdir dir="${home}/classes" />
    <apply executable="bash"
           parallel="true"
           failonerror="true"
           dir="${home}"
           dest="${home}/classes/fabric"
           relative="false"
           skipemptyfilesets="true"
           vmlauncher="false">
      <arg value="${fabc}"/>
      <arg value="-g"/>
      <arg value="-e"/>
      <arg value="-d"          /> <arg value="${home}/classes"/>
      <arg value="-sourcepath" /> <arg value="${home}/src/fabric" />
      <arg value="-cp"         /> <arg value="${home}/classes" />
      <arg value="-e"/>
      <srcfile />

      <fileset dir="${home}/src/fabric" includes="**/*.fab" />
      <globmapper from="*.fab" to="*.class" />
    </apply>
  </target>

  <target name="build-all" depends="build-jif"/>
  <target name="all"       depends="build-all"/>

</project>

