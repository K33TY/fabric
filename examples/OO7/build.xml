<!--
  This is the Apache Ant build file for the Fabric OO7 implementation.
-->

<project name="OO7" default="build-all" basedir=".">
  <description>
    Fabric NFS build file
  </description>

  <!--
  ****************************************************************************
    Global properties for this build.
  ****************************************************************************
  -->

  <import file="../../common.xml" />

  <dirname property="OO7.home" file="${ant.file.OO7}" />

  <!--
  ****************************************************************************
    Targets for cleaning up the directory tree.
  ****************************************************************************
  -->

  <target name="clean" description="Removes generated files">
    <delete dir="${OO7.home}/classes"/>
  </target>

  <target name="clobber" depends="clean" />

  <!--
  ****************************************************************************
    Compilation targets.
  ****************************************************************************
  -->

  <target name="build-all"
      description="Builds the Fabric OO7 implementation">
    <mkdir dir="${OO7.home}/classes" />
    <apply executable="bash"
        parallel="true"
        failonerror="true"
        dir="${OO7.home}"
        dest="${OO7.home}/classes"
        relative="false"
        skipemptyfilesets="true"
        vmlauncher="false">
      <arg value="${filc}" />
      <arg line="${debug.flag}" />
      <arg value="-d" />
      <arg value="classes" />
      <arg value="-sourcepath" />
      <arg value="src/fabil" />
      <arg value="-cp" />
      <arg value="classes" />
      <srcfile />
      <fileset dir="src/fabil" includes="OO7/*.fil" />
      <globmapper from="*.fil" to="*.class" />
    </apply>
  </target>

  <target name="all" depends="build-all" />

</project>
