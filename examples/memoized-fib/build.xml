<!--
  This is the Apache Ant build file for the Fabric readwritemix implementation.
-->

<project name="fib" default="build-all" basedir=".">
  <description>
    Fabric fib build file
  </description>

  <!--
  ****************************************************************************
    Global properties for this build.
  ****************************************************************************
  -->

  <import file="../../common.xml" />

  <dirname property="fib.home" file="${ant.file.fib}" />

  <!--
  ****************************************************************************
    Targets for cleaning up the directory tree.
  ****************************************************************************
  -->

  <target name="clean" description="Removes generated files">
    <delete dir="${fib.home}/classes"/>
  </target>

  <target name="clobber" depends="clean"
          description="Removes generated files and state of stores">
    <delete dir="${fib.home}/var"/>
  </target>

  <!--
  ****************************************************************************
    Compilation targets.
  ****************************************************************************
  -->

  <target name="build"
      description="Builds the Fabric fib implementation">
    <mkdir dir="${fib.home}/classes" />
    <apply executable="bash"
        parallel="true"
        failonerror="true"
        dir="${fib.home}"
        dest="${fib.home}/classes"
        relative="false"
        skipemptyfilesets="true"
        vmlauncher="false">
      <arg value="${filc}" />
      <arg line="${debug.flag}" />
      <arg value="-d" />
      <arg value="classes" />
      <arg value="-sourcepath" />
      <arg value="src/fabil" />
      <arg value="-cp" />
      <arg value="classes" />
      <srcfile />
      <fileset dir="src/fabil">
        <include name="fib/*.fil" />
      </fileset>
      <globmapper from="*.fil" to="*.class" />
    </apply>
  </target>

  <target name="build-all" depends="build" />
  <target name="all" depends="build-all" />

</project>

