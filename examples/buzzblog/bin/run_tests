#!/bin/bash

echo "RUNNING TESTS"
for i in {1..3}; do
	echo "RUNNING TRIAL "${i};
	killall xterm;
	rm -r var;
	ant clobber;
	ant build || break;
	bin/start-all || break;
	sleep 1;
	echo "INITIALIZING"
	bin/init || break;
	sleep 1;
	echo "POSTING"
	bin/alice-posts || break;
	sleep 1;
	echo "COMMENTING"
	bin/carol-comments || break;
	mv var var${i};
	sleep 1;
done
