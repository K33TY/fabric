#!/bin/bash

APP_HOME="$(dirname $0)/.."
FABRIC="${APP_HOME}/../.."
PATH="${PATH}:${FABRIC}/bin"

CP="${APP_HOME}/classes/fab-sig-impl"

export FABRIC_HOME="${APP_HOME}"

fab-store \
  --jvm-cp "${CP}" \
  --app-home "${FABRIC_HOME}" \
  --output-to-fs \
  --addbootcp "${APP_HOME}/classes/fab-sig-impl" \
  --addsigcp "${APP_HOME}/classes/fab-sig" \
  --name "$@"
