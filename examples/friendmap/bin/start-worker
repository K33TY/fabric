#!/bin/bash

APP_HOME="$(dirname $0)/.."
FABRIC="${APP_HOME}/../.."
PATH="${PATH}:${FABRIC}/bin"

CP="${APP_HOME}/classes/fab-sig-impl"

export FABRIC_HOME="${APP_HOME}"

fab --jvm-cp "${CP}" --app-home "${FABRIC_HOME}" --bootclasspath ${APP_HOME}/classes/fab-sig-impl:${FABRIC}/rt-classes:${FABRIC}/classes --sigcp ${APP_HOME}/classes/fab-sig:${FABRIC}/sig-classes/fabric --name "$@"

