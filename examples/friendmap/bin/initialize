#!/bin/bash

BIN_DIR="$(dirname $0)"
CB_DIR="${BIN_DIR}/../var/codebases"

# Publish the application code to the stores.
cd "${BIN_DIR}/.."
ant publish-all
cd - &>/dev/null

# Figure out codebase OIDs.
SNAPP_SCRIPTS_CB="$(cat "${CB_DIR}/snapp-scripts.codebase" | sed 's/[<>]//g')"
MAPSERV_SCRIPTS_CB="$(cat "${CB_DIR}/mapserv-scripts.codebase" | sed 's/[<>]//g')"
FRIENDMAP_SCRIPTS_CB="$(cat "${CB_DIR}/friendmap-scripts.codebase" | sed 's/[<>]//g')"

# Initialize application state.
"${BIN_DIR}/start-worker" snapp "${SNAPP_SCRIPTS_CB}"Init
"${BIN_DIR}/start-worker" mapserv "${MAPSERV_SCRIPTS_CB}"Init
"${BIN_DIR}/start-worker" friendmap "${FRIENDMAP_SCRIPTS_CB}"Init
"${BIN_DIR}/start-worker" alice "${ALICE_SCRIPTS_CB}"Init
"${BIN_DIR}/start-worker" bob "${BOB_SCRIPTS_CB}"Init
"${BIN_DIR}/start-worker" alice "${ALICE_SCRIPTS_CB}"AddFriends
"${BIN_DIR}/start-worker" bob "${BOB_SCRIPTS_CB}"AddFriends

