package snapp;

import util.Delegator;
import util.AssertionFailedError;

/**
 * An instance of Snapp corresponds to an instance of the Snapp social network.
 */
public class Snapp extends Delegator 
  where provider <= User.provider, User.provider <= provider
{

  /**
   * Create a new Snapp, operated by owner.
   */
  public
  Snapp {this}
  (
    String    {this} name,
    principal {this} owner
  )
  where
    provider <= {this}
  {
    super(name, owner);
  }

  public
  User       {this}
  createUser {this}
  (
    String    {this} name,
    principal {this} owner
  )
  where
    provider <= {this}
  {
    final Store store = getStore();
    try { return new User@store(name, owner, this); }
    catch (final NullPointerException e) { throw new AssertionFailedError("User constructor succeeds unless network is null"); }
  }
}

