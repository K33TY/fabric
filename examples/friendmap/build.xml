<project name="friendmap" default="build-all" basedir=".">
  <description>
    FriendMap build file
  </description>

  <!--
  ****************************************************************************
    Global properties for this build.
  ****************************************************************************
  -->

  <import file="../../common.xml" />

  <dirname property="home" file="${ant.file.friendmap}" />

  <!--
  ****************************************************************************
    Targets for cleaning up the directory tree.
  ****************************************************************************
  -->

  <target name="clean" description="Removes generated files">
    <delete dir="${home}/classes"/>
  </target>

  <target name="clobber" depends="clean"
          description="Removes generated files and state of stores">
    <delete dir="${home}/var"/>
  </target>

  <!--
  ****************************************************************************
    Compilation targets.
  ****************************************************************************
  -->

  <target name="build-jif-static-principals">
    <mkdir dir="${home}/classes/principals" />
    <apply executable="bash"
           parallel="true"
           failonerror="true"
           dir="${home}"
           skipemptyfilesets="true"
           dest="${home}/classes/principals/"
           vmlauncher="false">
      <arg value="${jifc}"/>
      <arg value="-d"          /> <arg value="${home}/classes/principals"/>
      <arg value="-sourcepath" /> <arg value="${home}/src/jif"/>
      <srcfile />

      <fileset dir="${home}/src/jif" includes="jif/principals/*.jif" />
      <globmapper from="*.jif" to="*.class" />
    </apply>
  </target>


  <target name="build-jif"
          description="Builds the Jif version of friendmap"
          depends="build-jif-static-principals">
    <mkdir dir="${home}/classes/jif" />
    <apply executable="bash"
           parallel="true"
           failonerror="true"
           dir="${home}"
           skipemptyfilesets="true"
           dest="${home}/classes/jif/"
           vmlauncher="false">
      <arg value="${jifc}"/>
      <!--<arg value="-untrusted-providers"/>-->
      <arg value="-d"          /> <arg value="${home}/classes/jif"/>
      <arg value="-sourcepath" /> <arg value="${home}/src/jif"/>
      <arg value="-classpath"  /> <arg value="${home}/classes/principals"/>
      <arg value="-e" />
      <srcfile />

      <fileset dir="${home}/src/jif" includes="friendmap/*.jif" excludes="jif/principals/*.jif" />
      <globmapper from="*.jif" to="*.class" />
    </apply>
  </target>

  <target name="build-local" depends="build-trusted" description="Builds the fabric version of friendmap">
    <fabc-local srcdir="${home}/src/fabric/snapp_1.0_codebase" />
    <fabc-local srcdir="${home}/src/fabric/mapserv_1.0_codebase" />
    <fabc-local srcdir="${home}/src/fabric/friendmap_1.0_codebase" />
  </target>

  <target name="build-all" depends="build-jif"/>
  <target name="all"       depends="build-all"/>

  <!--
  ******************************************************************************
    Auxiliary builds
  ******************************************************************************
  -->

  <target name="build-trusted">
    <fabc-local srcdir="${home}/src/fabric/trusted" />
  </target>


  <!--
  ******************************************************************************
    Subroutines
  ******************************************************************************
  -->

  <!--
  compile classes locally (without pushing to fabric).

  Parameters:
    srcdir - the directory containing the source
  -->
  <macrodef name="fabc-local">
    <attribute name="srcdir" />
    <sequential>
      <mkdir dir="${home}/classes/fabric" />
      <apply executable="bash"
             parallel="true"
             failonerror="true"
             dir="@{srcdir}"
             dest="${home}/classes/fabric"
             relative="false"
             skipemptyfilesets="true"
             vmlauncher="false">
        <arg value="${fabc}" />
        <arg value="-g" />
        <arg value="-e" />
        <arg value="-d" />         <arg value="${home}/classes/fabric" />
        <arg value="-sourcepath"/> <arg value="@{srcdir}" />
        <arg value="-classpath" /> <arg value="${home}/classes/fabric" />
        <srcfile />

        <fileset dir="@{srcdir}" includes="**/*.fab" />
        <globmapper from="*.fab" to="*.class" />
      </apply>
    </sequential>
  </macrodef>

</project>

