#!/bin/bash

APP_HOME="$(dirname $0)/.."
FABRIC="${APP_HOME}/../.."
PATH="${PATH}:${FABRIC}/bin"

CP="${APP_HOME}/classes"
CP="${CP}:${FABRIC}/src/lib/transient/classes"
CP="${CP}:${FABRIC}/lib/fabric-transient.jar"
CP="${CP}:${FABRIC}/src/lib/sif/classes"
CP="${CP}:${FABRIC}/lib/fabric-sif.jar"

export FABRIC_HOME="${APP_HOME}"

fab-http -classpath "${CP}" "$@" \
  --name bankweb ${APP_HOME}/web/bank --port 8081

