#!/bin/bash

APP_HOME="$(dirname $0)/.."
FABRIC="${APP_HOME}/../.."
PATH="${PATH}:${FABRIC}/bin"

CP="${APP_HOME}/classes"
CP="${CP}:${FABRIC}/lib/fabric-collections.jar"
CP="${CP}:${FABRIC}/lib/fabric-sif.jar"

export FABRIC_HOME="${APP_HOME}"

fab-http -classpath "${CP}" "$@" \
  --name webserver ${APP_HOME}/web --port 8080

