<!--
  This is the Apache Ant build file for the Fabric travel example
-->

<project name="sif-hello" default="build-all" basedir=".">
  <description>
    Build SIF Helloworld web application example
  </description>

  <!--
  ****************************************************************************
    Global properties for this build.
  ****************************************************************************
  -->

  <import file="../../common.xml" />
  <import file="${fabric.home}/src/lib/sif/common.xml" />
  <import file="${fabric.home}/src/lib/transient/common.xml" />

  <dirname property="hello.home" file="${ant.file.sif-hello}" />

  <path id="standard.classpath">
    <path refid="transient.classpath" />
    <path refid="sif.classpath" />
    <path refid="lib.classpath" />
    <pathelement path="${hello.home}/classes" />
  </path>

  <!--
  ****************************************************************************
    Targets for cleaning up the directory tree.
  ****************************************************************************
  -->

  <target name="clean" description="Removes generated files">
    <delete dir="${hello.home}/classes"/>
  </target>

  <target name="clobber" depends="clean"
          description="Removes generated files and state of stores">
    <delete dir="${hello.home}/var"/>
  </target>

  <!--
  ****************************************************************************
    Compilation targets.
  ****************************************************************************
  -->

  <target name="build-all" depends="build-hello" />
  <target name="all" depends="build-all" />

  <target name="build-hello" depends="sif, build-principals"
          description="Builds the SIF Hello example">
    <apply executable="bash"
           parallel="true"
           failonerror="true"
           dir="${hello.home}"
           dest="${hello.home}/classes"
           relative="false"
           skipemptyfilesets="true"
           vmlauncher="false">
      <arg value="${fabric.home}/bin/fabc"/>
      <arg value="-g"/>
      <arg value="-d"          /> <arg value="${hello.home}/classes"/>
      <arg value="-sourcepath" /> <arg value="${hello.home}/src" />
      <arg value="-cp"         /> <arg pathref="standard.classpath" />
      <arg value="-cp"         /> <arg value="${hello.home}/classes" />
      <arg value="-sigcp"      /> <arg pathref="sif.sigcp"/>
      <arg value="-e"/>
      <arg value="-trusted-providers"/>

      <!--
        <arg value="-report" /> <arg value="solver=5" />
        <arg value="-debugpositions"/>
        <arg value="-dump"   /> <arg value="FabricToFabilRewriter"/>
        <arg value="-dump"   /> <arg value="PrincipalCastAdder"/>
        <arg value="-report" /> <arg value="frontend=1"/>
        <arg value="-report" /> <arg value="visit=2"/>
        <arg value="-report" /> <arg value="labelEnv=5" />
        <arg value="-print"  /> <arg value="RemoteCallWrapperUpdater"/>
        <arg value="-print"  /> <arg value="FieldLabelResolver"/>
        <arg value="-report" /> <arg value="error=5"/>
        <arg value="-report" /> <arg value="errors=5"/>
        <arg value="-report" /> <arg value="debug=5" />
      -->

      <srcfile />
      <fileset dir="${hello.home}/src" includes="**/*.fab" excludes="jif/principals/*.fab" />
      <globmapper from="*.fab" to="*.class" />
    </apply>

    <apply executable="bash"
           parallel="true"
           failonerror="true"
           dir="${hello.home}"
           dest="${hello.home}/classes"
           relative="false"
           skipemptyfilesets="true"
           vmlauncher="false">
      <arg value="${fabric.home}/bin/filc"/>
      <arg value="-g"/>
      <arg value="-d"          /> <arg value="${hello.home}/classes"/>
      <arg value="-sourcepath" /> <arg value="${hello.home}/src" />
      <arg value="-cp"         /> <arg pathref="standard.classpath" />
      <arg value="-cp"         /> <arg value="${hello.home}/classes" />
      <srcfile />
      <fileset dir="${hello.home}/src" includes="**/*.fil" />
      <globmapper from="*.fil" to="*.class" />
    </apply>
  </target>

  <target name="build-principals">
    <apply executable="bash"
           parallel="true"
           failonerror="true"
           dir="${hello.home}"
           dest="${hello.home}/classes"
           relative="false"
           skipemptyfilesets="true"
           vmlauncher="false">
      <arg value="${fabric.home}/bin/fabc"/>
      <arg value="-g"/>
      <arg value="-d"          /> <arg value="${hello.home}/classes"/>
      <arg value="-sourcepath" /> <arg value="${hello.home}/src" />
      <arg value="-cp"         /> <arg pathref="standard.classpath" />
      <arg value="-cp"         /> <arg value="${hello.home}/classes" />
      <arg value="-sigcp"      /> <arg pathref="sif.sigcp"/>
      <arg value="-e"/>

      <!--
        <arg value="-report" /> <arg value="solver=5" />
        <arg value="-debugpositions"/>
        <arg value="-dump"   /> <arg value="FabricToFabilRewriter"/>
        <arg value="-dump"   /> <arg value="PrincipalCastAdder"/>
        <arg value="-report" /> <arg value="frontend=1"/>
        <arg value="-report" /> <arg value="visit=2"/>
        <arg value="-report" /> <arg value="labelEnv=5" />
        <arg value="-print"  /> <arg value="RemoteCallWrapperUpdater"/>
        <arg value="-print"  /> <arg value="FieldLabelResolver"/>
        <arg value="-report" /> <arg value="error=5"/>
        <arg value="-report" /> <arg value="errors=5"/>
        <arg value="-report" /> <arg value="debug=5" />
      -->

      <srcfile />
      <fileset dir="${hello.home}/src" includes="jif/principals/*.fab" />
      <globmapper from="*.fab" to="*.class" />
    </apply>
  </target>

</project>

